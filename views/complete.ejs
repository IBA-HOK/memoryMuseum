<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>思い出美術館 | 完成</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .title-section {
      margin: 8px 0;
      text-align: center;
    }
    .title-input-group {
      display: flex;
      gap: 10px;
      justify-content: center;
      align-items: center;
      margin-top: 10px;
    }
    .title-input {
      padding: 8px 12px;
      font-size: 16px;
      border: 2px solid #333;
      border-radius: 4px;
      min-width: 250px;
    }
    .title-save-btn {
      padding: 8px 16px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
    .title-save-btn:hover {
      background-color: #45a049;
    }
    .title-save-btn:disabled {
      background-color: #ccc;
      cursor: not-allowed;
    }
    .title-display {
      font-size: 18px;
      font-weight: bold;
      margin-top: 0;
      color: #333;
    }
    .complete-art .title-display {
      order: 2;
    }
    .complete-art .art-meta {
      order: 3;
    }
    .title-message {
      margin-top: 5px;
      font-size: 14px;
      color: #666;
    }
    .complete-actions--hidden {
      display: none;
    }
  </style>
</head>
<body>
  <!-- Hamburger Menu Button -->
  <button class="hamburger-button" id="hamburgerBtn" aria-label="メニューを開く">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <!-- Menu Overlay -->
  <div class="menu-overlay" id="menuOverlay">
    <nav class="menu-nav">
      <ul class="menu-list">
        <li class="menu-item item-orange">
          <a href="/home" class="menu-link">ホーム</a>
          <div class="menu-decoration">
            <div class="line"></div>
            <span class="star">★</span>
          </div>
        </li>

        <li class="menu-item item-blue">
          <a href="/atelier/mode" class="menu-link">アトリエ</a>
          <div class="menu-decoration">
            <div class="line"></div>
            <span class="star">★</span>
          </div>
        </li>

        <li class="menu-item item-pink">
          <a href="/gallery" class="menu-link">展示室</a>
          <div class="menu-decoration">
            <div class="line"></div>
            <span class="star">★</span>
          </div>
        </li>

        <li class="menu-item item-green">
          <a href="#" class="menu-link" id="logoutLink">ログアウト</a>
          <div class="menu-decoration">
            <div class="line"></div>
            <span class="star">★</span>
          </div>
        </li>
      </ul>
    </nav>
  </div>

  <div class="screen-container complete-screen <%= mode %>">
    <h2>今日の絵が完成しました！</h2>
    <p style="margin: 8px 0;">新たな絵が展示室に飾られました。<br>今日も一日お疲れ様でした！</p>
    <% if (art) { %>
      <div class="complete-art">
        <img src="<%= art.path %>" alt="保存された作品" loading="lazy">
        <% if (art.title) { %>
          <div class="title-display <%= /^無題No\.\d+$/.test(art.title) ? 'title-display--untitled' : '' %>">「<%= art.title %>」</div>
        <% } %>
        <div class="art-meta">No.<%= art.artid %> / <%= new Date(art.timestamp).toLocaleString("ja-JP") %></div>
      </div>
      <div class="title-section">
        <div class="title-input-group">
          <input 
            type="text" 
            id="titleInput" 
            class="title-input" 
            placeholder="作品にタイトルをつける" 
            value="<%= art.title || '' %>"
            maxlength="100"
          >
          <button id="saveTitleBtn" class="title-save-btn">保存</button>
        </div>
        <div id="titleMessage" class="title-message"></div>
      </div>
    <% } else { %>
      <p class="complete-note">最新の作品情報が見つかりませんでした。</p>
    <% } %>
    <div id="navigationActions" class="complete-actions complete-actions--hidden">
      <a href="/gallery" class="btn-primary" style="background:none; padding:0; overflow:hidden; border-radius:20px;">
        <img src="/images/gallery-btn2.png" alt="展示室へ" style="width:100%; height:100%; display:block;">
      </a>
      <a href="/atelier/mode" class="btn-primary" style="background:none; padding:0; overflow:hidden; border-radius:20px;">
        <img src="/images/onemore-btn.jpg" alt="もう一度描く" style="width:100%; height:100%; display:block;">
      </a>
    </div>
    <div class="complete-actions">
      <a href="/home" class="btn-link">ホームに戻る</a>
    </div>
  </div>
  <% if (art) { %>
  <script>
    const artId = <%= art.artid %>;
    const titleInput = document.getElementById('titleInput');
    const saveTitleBtn = document.getElementById('saveTitleBtn');
    const titleMessage = document.getElementById('titleMessage');
    const navigationActions = document.getElementById('navigationActions');

    saveTitleBtn.addEventListener('click', async () => {
      const title = titleInput.value.trim();

      saveTitleBtn.disabled = true;
      saveTitleBtn.textContent = '保存中...';

      try {
        const response = await fetch(`/api/art/${artId}/title`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ title })
        });

        const data = await response.json();

        if (response.ok) {
          const savedTitle = data?.title || title;
          titleMessage.textContent = `タイトルを「${savedTitle}」に保存しました！`;
          titleMessage.style.color = '#4CAF50';
          navigationActions.classList.remove('complete-actions--hidden');
          
          // Update or create title display
          const completeArt = document.querySelector('.complete-art');
          let titleDisplay = completeArt.querySelector('.title-display');
          
          if (titleDisplay) {
            titleDisplay.textContent = `「${savedTitle}」`;
            titleDisplay.classList.toggle('title-display--untitled', /^無題No\.\d+$/.test(savedTitle));
          } else {
            titleDisplay = document.createElement('div');
            titleDisplay.className = 'title-display' + (/^無題No\.\d+$/.test(savedTitle) ? ' title-display--untitled' : '');
            titleDisplay.textContent = `「${savedTitle}」`;
            const artMeta = completeArt.querySelector('.art-meta');
            completeArt.insertBefore(titleDisplay, artMeta);
          }
          
          // Hide input group
          const inputGroup = document.querySelector('.title-input-group');
          if (inputGroup) {
            inputGroup.style.display = 'none';
          }
        } else {
          titleMessage.textContent = data.error || '保存に失敗しました';
          titleMessage.style.color = '#f44336';
        }
      } catch (error) {
        titleMessage.textContent = 'エラーが発生しました';
        titleMessage.style.color = '#f44336';
      } finally {
        saveTitleBtn.disabled = false;
        saveTitleBtn.textContent = '保存';
      }
    });

    titleInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') {
        saveTitleBtn.click();
      }
    });
  </script>
  <% } %>
  <script>
    // Hamburger menu toggle
    const hamburgerBtn = document.getElementById('hamburgerBtn');
    const menuOverlay = document.getElementById('menuOverlay');
    const logoutLink = document.getElementById('logoutLink');

    hamburgerBtn.addEventListener('click', () => {
      hamburgerBtn.classList.toggle('active');
      menuOverlay.classList.toggle('active');
    });

    // Close menu when clicking outside
    menuOverlay.addEventListener('click', (e) => {
      if (e.target === menuOverlay) {
        hamburgerBtn.classList.remove('active');
        menuOverlay.classList.remove('active');
      }
    });

    // Logout functionality
    logoutLink.addEventListener('click', async (event) => {
      event.preventDefault();
      try {
        const response = await fetch('/api/logout', { method: 'POST' });
        if (response.ok || response.status === 401) {
          window.location.href = '/login';
          return;
        }
      } catch (err) {
        console.error('Logout failed:', err);
      }
      alert('ログアウトに失敗しました');
    });
  </script>
</body>
</html>
